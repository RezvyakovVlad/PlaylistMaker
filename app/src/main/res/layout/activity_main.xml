<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    style="@style/ActivityMainTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".presentation.main.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ys_display_medium"
        android:text="@string/app_name"
        android:textColor="@color/YP_White"
        android:textFontWeight="@integer/fw_500"
        android:textSize="@dimen/fs_text_24"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="24dp">

        <Button
            android:id="@+id/search"
            style="@style/MainButton"
            android:text="@string/c_search"
            app:icon="@drawable/ic_search" />

        <Button
            android:id="@+id/media"
            style="@style/MainButton"
            android:text="@string/c_media"
            app:icon="@drawable/ic_media" />

        <Button
            android:id="@+id/tools"
            style="@style/MainButton"
            android:text="@string/c_tools"
            app:icon="@drawable/ic_tools" />

    </LinearLayout>

</LinearLayout>