<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="@string/search"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/black"
                android:textSize="22dp"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="378dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/search_backgraund"
                android:orientation="horizontal"
                android:padding="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/ic_search1" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="Поиск..."
                    android:textColor="@color/YP_Text_Gray"
                    android:textSize="16sp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:elevation="8dp"
        android:weightSum="3">

        <Button
            android:id="@+id/nav_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/search"
            android:textSize="12sp"
            android:textColor="@color/YP_Blue"
            android:drawableTop="@drawable/ic_search"
            android:drawablePadding="4dp"
            android:drawableTint="@color/YP_Blue"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:padding="0dp"/>

        <Button
            android:id="@+id/nav_media"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/media"
            android:textSize="12sp"
            android:textColor="@color/YP_Black"
            android:drawableTop="@drawable/ic_media"
            android:drawablePadding="4dp"
            android:drawableTint="@color/YP_Black"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:padding="0dp"/>

        <Button
            android:id="@+id/nav_settings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/settings"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:drawableTop="@drawable/ic_tools"
            android:drawablePadding="4dp"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:padding="0dp"/>

    </LinearLayout>

</RelativeLayout>