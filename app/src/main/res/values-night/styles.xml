<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ActivityMainTheme">
        <item name="android:background">@color/dark_gray</item>
    </style>

    <style name="SettingsItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/m_height_60</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingHorizontal">@dimen/h_p_16</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/fs_text_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">@integer/fw_400</item>
        <item name="android:textStyle">bold</item>
        <item name="drawableTint">@color/white</item>
        <item name="thumbTint">@color/blue</item>
        <item name="trackTint">@color/blue_light</item>
    </style>

    <style name="BackButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:drawablePadding">@dimen/i_p_20</item>
        <item name="android:padding">@dimen/p_12</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/fs_text_24</item>
        <item name="android:textFontWeight">@integer/fw_100</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="drawableStartCompat">@drawable/ic_arrow_back</item>
        <item name="drawableTint">@color/white</item>
    </style>

    <style name="ToolbarText">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:textFontWeight">100</item>
        <item name="drawableStartCompat">@drawable/ic_arrow_back</item>
        <item name="drawableTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="SearchTextView">
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="drawableTint">@color/black</item>
        <item name="android:backgroundTint">@color/black</item>
    </style>

    <style name="SearchBg">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="IwClear">
        <item name="tint">@color/black</item>
    </style>

    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/fs_text_24</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">@integer/fw_100</item>
        <item name="drawableTint">@color/white</item>
    </style>
</resources>