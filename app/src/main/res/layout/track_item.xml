<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="61dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/artwork_image"
        android:layout_width="@dimen/image_size"
        android:layout_height="@dimen/image_size"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/margin_start"
        android:layout_marginEnd="@dimen/margin_end"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/track_name"
            style="@style/TextViewRecycler"
            android:textColor="?attr/textAppearanceBodyMedium"
            android:textSize="@dimen/fs_text_16"
            tools:text="Yesterday (Remastered 2009)" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/artist_name"
                style="@style/TextViewRecycler"
                tools:text="The Beatles" />

            <ImageView
                android:layout_width="@dimen/e_4"
                android:layout_height="@dimen/e_4"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/e_4"
                android:layout_marginEnd="@dimen/e_4"
                android:src="@drawable/ic_dot" />

            <TextView
                android:id="@+id/track_time"
                style="@style/TextViewRecycler"
                tools:text="2:05" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/icp_24"
        android:layout_height="@dimen/icp_24"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/icp_12"
        android:layout_marginEnd="@dimen/icp_12"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_arrow_forward" />
</LinearLayout>