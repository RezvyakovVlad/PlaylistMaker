<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/media"
                android:textSize="22dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:textStyle="normal"
                android:layout_marginBottom="16dp"
                android:textColor="@android:color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <Button
                    android:id="@+id/favorite_tracks_button"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Избранные треки"
                    android:textStyle="normal"
                    android:layout_marginEnd="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:textColor="@android:color/black"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/playlists_button"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Плейлисты"
                    android:textStyle="normal"
                    android:layout_marginStart="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:textColor="@android:color/black"
                    android:textAllCaps="false"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="24dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:minHeight="100dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_placeholder_nothing2"
                    android:contentDescription="Пустая медиатека"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ваша медиатека пуста"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_marginVertical="16dp"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:elevation="8dp"
        android:weightSum="3">

        <Button
            android:id="@+id/nav_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/search"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:drawableTop="@drawable/ic_search"
            android:drawablePadding="4dp"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:padding="0dp"/>

        <Button
            android:id="@+id/nav_media"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/media"
            android:textSize="12sp"
            android:textColor="@color/YP_Blue"
            android:drawableTop="@drawable/ic_media"
            android:drawablePadding="4dp"
            android:drawableTint="@color/YP_Blue"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:padding="0dp"/>

        <Button
            android:id="@+id/nav_settings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/settings"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:drawableTop="@drawable/ic_tools"
            android:drawablePadding="4dp"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:padding="0dp"/>

    </LinearLayout>

</RelativeLayout>