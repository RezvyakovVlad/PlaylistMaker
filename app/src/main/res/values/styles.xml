<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ActivityMainTheme">
        <item name="android:background">@color/YP_Blue</item>
    </style>

    <style name="MainButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">@dimen/icp_12</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/YP_Black</item>
        <item name="android:textSize">@dimen/fs_text_24</item>
        <item name="android:textFontWeight">@integer/fw_500</item>
        <item name="backgroundTint">@color/YP_White</item>
        <item name="cornerRadius">@dimen/icp_16</item>
        <item name="iconSize">@dimen/icp_24</item>
        <item name="iconPadding">@dimen/icp_12</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/YP_Black</item>
        <item name="android:letterSpacing">0.00</item>
        <item name="background">@color/YP_White</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:elevation">@dimen/e_4</item>
    </style>

    <style name="SettingsItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/m_height_60</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingHorizontal">@dimen/h_p_16</item>
        <item name="android:textColor">@color/YP_Black</item>
        <item name="android:textSize">@dimen/fs_text_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">@integer/fw_400</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BackButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:drawablePadding">@dimen/i_p_20</item>
        <item name="android:padding">@dimen/p_12</item>
        <item name="android:textColor">@color/YP_Black</item>
        <item name="android:textSize">@dimen/fs_text_24</item>
        <item name="android:textFontWeight">@integer/fw_100</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="drawableTint">@color/YP_Black</item>
    </style>

    <style name="DarkThemeSwitchTheme" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="colorControlActivated">@color/YP_Blue</item>
    </style>

    <style name="ToolbarText">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:textFontWeight">100</item>
        <item name="drawableStartCompat">@drawable/ic_arrow_back</item>
        <item name="drawableTint">@color/YP_Black</item>
        <item name="android:textColor">@color/YP_Black</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="SearchTextView">
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/YP_Text_Gray</item>
        <item name="drawableTint">@color/YP_Text_Gray</item>
        <item name="android:backgroundTint">@color/ico_light_gray</item>
    </style>

    <style name="SearchBg">
        <item name="android:backgroundTint">@color/ico_light_gray</item>
    </style>

    <style name="IwClear">
        <item name="tint">@color/YP_Text_Gray</item>
    </style>

    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/fs_text_24</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">@integer/fw_100</item>
    </style>

    <style name="TextViewRecycler">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">@integer/fw_400</item>
        <item name="titleTextColor">?attr/textAppearanceBodySmall</item>
        <item name="android:textSize">@dimen/fs_text_12</item>
    </style>

    <style name="PlaceholderFoundNothing">
        <item name="android:layout_gravity">center</item>
        <item name="android:drawablePadding">@dimen/h_p_16</item>
        <item name="android:fontFamily">font/ys_display_regular</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">?attr/textAppearanceBody2</item>
        <item name="android:textSize">@dimen/fs_text_20</item>
        <item name="android:visibility">gone</item>
        <item name="android:textFontWeight">@integer/fw_400</item>
    </style>

    <style name="NoConnectionPlaceholder">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/fs_text_20</item>
        <item name="android:fontFamily">font/ys_display_regular</item>
        <item name="android:textColor">?attr/textAppearanceBody2</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textFontWeight">@integer/fw_400</item>
    </style>

    <style name="NoConnectionImagePlaceholder">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/margin_104</item>
    </style>

    <style name="UpdateButton">
        <item name="android:layout_marginTop">@dimen/margin_24</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:text">@string/update</item>
        <item name="android:textSize">@dimen/fs_text_12</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/btn_corners_54</item>
        <item name="android:backgroundTint">?attr/buttonTint</item>
        <item name="android:fontFamily">font/ys_display_regular</item>
        <item name="android:textFontWeight">@integer/fw_500</item>
        <item name="android:letterSpacing">0.00</item>
    </style>

    <style name="HistoryText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/h_p_16</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textFontWeight">@integer/fw_500</item>
        <item name="android:fontFamily">font/ys_display_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingVertical">@dimen/v_p_16</item>
        <item name="android:textColor">?attr/buttonTint</item>
        <item name="android:textSize">@dimen/fs_text_20</item>
    </style>

    <style name="AlbumCoverImage">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="layout_constraintDimensionRatio">h,1:1</item>
    </style>

    <style name="TrackNameText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_24</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">?attr/buttonTint</item>
        <item name="android:textFontWeight">@integer/fw_400</item>
        <item name="android:textSize">@dimen/fs_text_24</item>
    </style>

    <style name="ArtistNameText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">?attr/buttonTint</item>
        <item name="android:textFontWeight">@integer/fw_400</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SmallControlButton">
        <item name="android:layout_width">52dp</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:background">#00000000</item>
    </style>

    <style name="PlayButton">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginTop">28dp</item>
        <item name="android:background">#00000000</item>
    </style>

    <style name="TimePlayText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/buttonTint</item>
        <item name="android:textSize">@dimen/fs_text_12</item>
    </style>


    <style name="NameOfTrackData">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/fs_text_12</item>
        <item name="android:fontFamily">"@font/ys_display_regular"</item>
        <item name="android:textFontWeight">@integer/fw_400</item>
        <item name="android:textColor">?attr/buttonTint</item>
        <item name="layout_constrainedWidth">true</item>
    </style>

    <style name="TrackData">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:fontFamily">"@font/ys_display_regular"</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">?attr/buttonTint</item>
        <item name="android:textFontWeight">@integer/fw_400</item>
        <item name="android:textSize">@dimen/fs_text_12</item>
        <item name="layout_constrainedWidth">true</item>
        <item name="layout_constraintHorizontal_bias">1</item>
    </style>

</resources>